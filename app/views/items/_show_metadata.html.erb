<%# Override from Orchid to remove some fields and add source / repository %>

<div class="metadata">
  <ul>
    <% if @res["title"].present? %>
      <li>
        <%= metadata(@res, t("item.metadata.title", default: "Title"),
          "title", link: false) %>
      </li>
    <% end %>
    <% if @res["date_display"].present? %>
      <li>
        <%= metadata(@res, t("item.metadata.date", default: "Date"),
          "date_display", link: false) %>
      </li>
    <% end %>
    <% if @res["creator"].present? %>
      <li>
        <%= metadata(@res, t("item.metadata.creators", default: "Author(s)"),
          "creator.name", link: false) %>
      </li>
    <% end %>
    <% if @res["person"].present? %>
      <li>
        <%= metadata(@res, t("item.metadata.people", default: "People"),
          "person.name") %>
      </li>
    <% end %>
    <% if @res["source"].present? %>
      <li>
        <%= metadata(@res, t("item.metadata.source", default: "Source"),
          "source", link: false) %>
      </li>
    <% end %>
    <% if @res["publisher"].present? %>
      <li>
        <%= metadata(@res, t("item.metadata.publisher", default: "Repository"),
          "publisher", link: false) %>
      </li>
    <% end %>
    <%# When copying this template into projects, consider adding rel tag to the source link
    to note the format and if the link is external %>
    <% if @res["uri_data"].present? %>
    <li><strong>Source Document: </strong>
      <a href="<%= @res["uri_data"] %>"><%= File.basename(@res["uri_data"]) %></a>
    </li>
    <% end %>
  </ul>
</div>
