<%# TODO make title dynamic %>

<% year = @res["date"].present? ? @res["date"][0,4] : "undated" %>
<h2><%= @res["title"] %> (<%= year %>)</h2>

<%= link_to "Browse #{@res["topics"].first} images",
  image_topic_path(@res["topics"].first) %>

<div class="row">
  <div class="col-md-9">
    <%= image_tag iiif(@res["image_id"], size: "!800,800"),
      alt: @res["title"]
    %>
  </div>
  <div class="col-md-3">
    <div class="image_metadata">
      <ul>
        <% if @res["date_display"].present? %>
          <li>
            <%= metadata(@res, t("item.metadata.date_display", default: "Date Display"),
            "date_display", link: false) %>
          </li>
        <% end %>
        <% if @res["description"].present? %>
          <li>
            <%= metadata(@res, t("item.metadata.description", default: "Description"),
              "description", link: false) %>
          </li>
        <% end %>
        <% if @res["creator"].present? %>
          <li>
            <%= metadata(@res, t("item.metadata.creators", default: "Author(s)"),
              "creator.name", link: false) %>
          </li>
        <% end %>
        <% if @res["identifier"].present? %>
          <li>
            <%= metadata(@res, "Image Identifier",
              "identifier", link: false) %>
          </li>
        <% end %>
        <% if @res["source"].present? %>
          <li>
            <%= metadata(@res, t("item.metadata.source", default: "Source"),
              "source", link: false) %>
          </li>
        <% end %>
        <% if @res["rights"].present? %>
          <li>
            <%= metadata(@res, t("item.metadata.rights", default: "Rights"),
            "rights", link: false) %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
